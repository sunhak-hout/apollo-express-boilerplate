{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["./src/libs/*"],
      "@resolvers/*": ["./src/resolvers/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
